{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "framework": "vue",
  "js-types-syntax": "typescript",
  "description-markup": "markdown",
  "framework-config": {
    "enable-when": {
      "file-extensions": ["vue"]
    }
  },
  "contributions": {
    "html": {
      "vue-directives": [
        {
          "name": "fetcher-src",
          "description": "Load image with Fetcher",
          "attribute-value": {},
          "modifiers": [
            {
              "name": "lazy",
              "description": "Enable lazy loading - image will only load when visible in viewport"
            }
          ]
        }
      ]
    }
  }
}
